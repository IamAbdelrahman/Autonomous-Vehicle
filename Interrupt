#include <avr/io.h>
#include <avr/interrupt.h>

volatile int count = 0;

ISR(TIMER1_COMPA_vect) {
    count++; // Increment counter on each interrupt
}

int main(void) {
    // Set up timer 1 to generate an interrupt every 1ms
    OCR1A = 15999; // Set output compare value for 1ms interrupt
    TCCR1B |= (1 << WGM12); // Set timer to CTC mode
    TIMSK1 |= (1 << OCIE1A); // Enable output compare interrupt
    sei(); // Enable global interrupts

    // Main loop
    while (1) {
        // Do something
    }
}
